<div class="col lg-4 md-6 sm-12 mb-1">
  <div class="card">
    <div class="card-image-container">
      <img class="card-image" src="<%= cardItem.image %>" alt="" />
    </div>
    <div class="card-title"><%= cardItem.title %></div>
    <p class="card-description"><%= cardItem.body %></p>
    <% var Links=cardItem.links %>
    <div>
      <% Links.forEach(function(link) { %>
      <a class="card-link" href="<%= link.href %>"><%= link.text %></a>
      <% }) %>
    </div>
  </div>
</div>
